---
const { title, isOpen } = Astro.props;
---

<div id="modal" class={`fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 ${isOpen ? 'block' : 'hidden'}`}>
  <div class="bg-white rounded-lg shadow-xl max-w-md w-full mx-4">
    <div class="border-b border-gray-200 px-6 py-4 flex justify-between items-center">
      <h2 class="text-xl font-bold">{title}</h2>
      <button class="text-gray-400 hover:text-gray-600" id="close-modal">
        âœ•
      </button>
    </div>
    <div class="px-6 py-4">
      <slot />
    </div>
  </div>
</div>

<script>
  const modal = document.getElementById('modal');
  const closeBtn = document.getElementById('close-modal');

  if (closeBtn && modal) {
    closeBtn.addEventListener('click', () => {
      modal.classList.add('hidden');
    });
  }
</script>
