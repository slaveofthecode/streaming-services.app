---
import '../styles/global.css';

const { title, description = 'Gestión de Suscripciones a Streaming' } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body>
    <div class="min-h-screen flex flex-col">
      <header class="bg-white shadow-sm border-b border-gray-200">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4 flex justify-between items-center">
          <div>
            <h1 class="text-2xl font-bold text-primary">StreamSub</h1>
            <p class="text-sm text-gray-600">Gestión de Suscripciones</p>
          </div>
          <nav class="flex gap-4">
            <a href="/" class="text-gray-700 hover:text-primary transition-colors">Dashboard</a>
            <a href="/servicios" class="text-gray-700 hover:text-primary transition-colors">Servicios</a>
            <a href="/clientes" class="text-gray-700 hover:text-primary transition-colors">Clientes</a>
            <a href="/billing" class="text-gray-700 hover:text-primary transition-colors">Billing</a>
          </nav>
        </div>
      </header>

      <main class="flex-1 max-w-7xl mx-auto w-full px-4 sm:px-6 lg:px-8 py-8">
        <slot />
      </main>

      <footer class="bg-gray-50 border-t border-gray-200 py-6">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center text-gray-600 text-sm">
          <p>&copy; 2024 StreamSub. Todos los derechos reservados.</p>
        </div>
      </footer>
    </div>
  </body>
</html>

<style is:global>
  html {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  }
</style>
