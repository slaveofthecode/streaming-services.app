---
import BaseLayout from '../layouts/BaseLayout.astro';
import StatCard from '../components/StatCard.astro';
import Badge from '../components/Badge.astro';
import { BillingReport } from '../types';

let billingData = {
  totalAmount: 0,
  clientCount: 0,
  activeSubscriptions: 0,
  records: [],
};

let error = '';
let loading = true;
let selectedMonth = new Date().toISOString().slice(0, 7);

try {
  const response = await fetch(
    `http://localhost:3001/api/billing/monthly?month=${selectedMonth}`
  );
  if (response.ok) {
    billingData = await response.json();
  } else {
    error = 'Error al cargar datos de billing';
  }
} catch (e) {
  error = 'No se pudo conectar con el servidor';
  console.error(error, e);
} finally {
  loading = false;
}
---

<BaseLayout title="Billing">
  <div class="mb-8">
    <h2 class="text-2xl font-bold mb-4">Gesti√≥n de Billing</h2>
    <div class="flex gap-4 items-end">
      <div>
        <label class="label">Seleccionar Mes</label>
        <input
          type="month"
          id="billing-month"
          value={selectedMonth}
          class="input max-w-xs"
        />
      </div>
      <button id="btn-filter" class="btn btn-primary">
        Filtrar
      </button>
    </div>
  </div>

  {error && (
    <div class="mb-6 p-4 bg-red-100 border border-red-400 text-red-700 rounded-lg">
      {error}
    </div>
  )}

  {loading ? (
    <div class="text-center py-8">
      <p class="text-gray-600">Cargando datos de billing...</p>
    </div>
  ) : (
    <>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <StatCard
          label="Ingresos Totales"
          value={`$${billingData.totalAmount.toFixed(2)}`}
          icon="üí∞"
          color="primary"
        />
        <StatCard
          label="Clientes Facturables"
          value={billingData.clientCount}
          icon="üë•"
          color="secondary"
        />
        <StatCard
          label="Suscripciones Activas"
          value={billingData.activeSubscriptions}
          icon="‚úì"
          color="accent"
        />
      </div>

      <div class="card">
        <h3 class="text-lg font-semibold mb-6">Detalle de Facturaci√≥n por Cliente</h3>

        {billingData.records.length === 0 ? (
          <div class="text-center py-8 text-gray-600">
            No hay registros de facturaci√≥n para este per√≠odo
          </div>
        ) : (
          <div class="overflow-x-auto">
            <table class="w-full">
              <thead>
                <tr class="border-b-2 border-gray-300">
                  <th class="text-left py-3 px-4 font-semibold">Cliente</th>
                  <th class="text-left py-3 px-4 font-semibold">Servicios</th>
                  <th class="text-right py-3 px-4 font-semibold">Monto</th>
                  <th class="text-center py-3 px-4 font-semibold">Acciones</th>
                </tr>
              </thead>
              <tbody>
                {billingData.records.map((record) => (
                  <tr class="border-b border-gray-200 hover:bg-gray-50 transition-colors">
                    <td class="py-3 px-4">
                      <div>
                        <p class="font-medium">{record.clientName}</p>
                        <p class="text-xs text-gray-600">ID: {record.clientId}</p>
                      </div>
                    </td>
                    <td class="py-3 px-4">
                      <div class="space-y-1">
                        {record.services.map((service) => (
                          <div class="text-sm text-gray-600">
                            {service.serviceName}{' '}
                            <span class="text-primary font-medium">
                              ${service.price.toFixed(2)}
                            </span>
                          </div>
                        ))}
                      </div>
                    </td>
                    <td class="py-3 px-4 text-right">
                      <p class="text-lg font-bold text-primary">
                        ${record.totalAmount.toFixed(2)}
                      </p>
                    </td>
                    <td class="py-3 px-4 text-center">
                      <button
                        class="btn btn-outline text-sm px-3 py-1"
                        id={`btn-payment-${record.clientId}`}
                        data-client-id={record.clientId}
                      >
                        Registrar Pago
                      </button>
                    </td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        )}
      </div>

      <!-- Modal para registrar pago -->
      <div id="payment-modal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
        <div class="bg-white rounded-lg shadow-xl max-w-md w-full mx-4">
          <div class="border-b border-gray-200 px-6 py-4">
            <h2 class="text-xl font-bold">Registrar Pago</h2>
          </div>
          <form id="payment-form" class="px-6 py-4 space-y-4">
            <input type="hidden" id="payment-client-id" />
            <div>
              <label class="label">Monto ($)</label>
              <input
                type="number"
                id="payment-amount"
                class="input"
                placeholder="0.00"
                step="0.01"
                required
              />
            </div>
            <div class="flex gap-3 pt-4">
              <button
                type="button"
                class="btn btn-outline flex-1"
                id="btn-cancel-payment"
              >
                Cancelar
              </button>
              <button type="submit" class="btn btn-primary flex-1">
                Registrar Pago
              </button>
            </div>
          </form>
        </div>
      </div>
    </>
  )}

  <script>
    const billingMonth = document.getElementById('billing-month');
    const btnFilter = document.getElementById('btn-filter');
    const paymentModal = document.getElementById('payment-modal');
    const paymentForm = document.getElementById('payment-form');
    const btnCancelPayment = document.getElementById('btn-cancel-payment');
    const paymentClientId = document.getElementById('payment-client-id');
    const paymentAmount = document.getElementById('payment-amount');

    btnFilter?.addEventListener('click', () => {
      const month = billingMonth.value;
      window.location.href = `/billing?month=${month}`;
    });

    // Payment buttons
    document.querySelectorAll('[id^="btn-payment-"]').forEach((btn) => {
      btn.addEventListener('click', (e) => {
        const clientId = (e.target as HTMLElement).getAttribute('data-client-id');
        paymentClientId.value = clientId || '';
        paymentAmount.value = '';
        paymentModal?.classList.remove('hidden');
      });
    });

    btnCancelPayment?.addEventListener('click', () => {
      paymentModal?.classList.add('hidden');
    });

    paymentForm?.addEventListener('submit', async (e) => {
      e.preventDefault();
      const data = {
        clientId: parseInt(paymentClientId.value),
        billingMonth: billingMonth.value,
        amount: parseFloat(paymentAmount.value),
      };

      try {
        const response = await fetch('http://localhost:3001/api/billing/payment', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data),
        });

        if (response.ok) {
          alert('Pago registrado exitosamente');
          paymentModal?.classList.add('hidden');
          location.reload();
        } else {
          alert('Error al registrar pago');
        }
      } catch (error) {
        alert('Error: ' + (error as Error).message);
      }
    });
  </script>
</BaseLayout>
